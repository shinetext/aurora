<%
  var fname = typeof firstName === 'string' ? firstName : '';
  var phoneNum = typeof phone === 'string' ? phone : '';
%>

<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <form action="/refer" method="post">
    <input class="form-control" name="first_name" placeholder="Your First Name" type="text" value="<%= fname %>" required>
    <input class="form-control" name="phone" placeholder="Your Phone Number" type="tel" value="<%= phoneNum %>" required>
    <input class="form-control" name="friends[]" placeholder="Your Friend's Number" type="tel" required>
    <input class="form-control" name="friends[]" placeholder="Other Friend's Number (optional)" type="tel">
    <input class="form-control" name="friends[]" placeholder="Other Friend's Number (optional)" type="tel">
    <input class="form-control" name="friends[]" placeholder="Other Friend's Number (optional)" type="tel">
    <input class="btn col-xs-8 col-xs-offset-2" type="submit" value="SUBMIT"/>
  </form>
</div>