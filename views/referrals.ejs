<div class="referrals-page">

<%- partial ('partials/navbar.ejs') %>

<div class="header">

  <h1><%= headerText %></h1>

  <img src="<%= headerImage %>">

</div>
<div class="content">
  <div class="container">

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

        <p>Share Shine with your besties to earn exclusive
        <strong>Shine swag</strong> that you can rock with your squad.</p>

        <h3>Check Your Referrals</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
          <div class="form-field">
            <input class="form-control get-referral-phone"
              name="get-referral-phone"
              id="get-referral-phone"
              data-for="get-referral-phone"
              data-error="invalid-number-error"
              type="tel"
              value="" required>
            <label for="get-referral-phone">Your Phone Number</label>
          </div>
          <div id="invalid-number-error">Please enter a valid cell phone number.</div>
          <a class="btn get-referral-info-btn"
            data-for="get-referral-phone"
            data-error="invalid-number-error"
            href="#">Get Referral Link</a>
      </div>
    </div>

  </div>
</div>

</div>